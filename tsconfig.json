{
    "compilerOptions": {
        "strict": true,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["ES2016", "ESNext"],
        "module": "commonjs",
