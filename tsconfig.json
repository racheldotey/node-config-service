{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["ES2016", "ES2021", "ESNext", "DOM"],
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "outDir": "./types",
        "sourceMap": true,
        "target": "es6"
    },
    "files": ["src/index.ts"]
}
