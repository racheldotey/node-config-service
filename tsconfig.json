{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"composite": true,
		"declarationMap": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src"
		]
	},
	"lib": [
		"es2015"
	],
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}