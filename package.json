{
	"name": "nodejs-config-service",
	"version": "1.0.0",
	"description": "Manage a set of config variables that are dependent upon node environmental variables set on the server.",
	"keywords": [
		"config",
		"env",
		"nodeenv",
		"dotenv"
	],
	"main": "./src/index.js",
	"author": "Rachel Dotey <hello@racheldotey.com>",
	"homepage": "https://github.com/racheldotey/nodejs-config-service",
	"bugs": "https://github.com/racheldotey/nodejs-config-service/issues",
	"license": "MIT",
	"dependencies": {
		"dotenv": "^16.0.2",
		"path": "^0.12.7"
	},
	"devDependencies": {
		"clean-jsdoc-theme": "^4.1.8",
		"express": "^4.18.1",
		"jsdoc": "^3.6.11",
		"jsdoc-to-markdown": "^7.1.1",
		"livereload": "^0.9.3",
		"nodemon": "^2.0.20",
		"ntl": "^5.1.0",
		"open": "^8.4.0",
		"open-cli": "^7.0.1"
	},
	"nodemonConfig": {
		"delay": 1000,
		"env": {
			"NODE_ENV": "development"
		},
		"execMap": {
			"js": "node"
		},
		"ext": "js,json,mjs",
		"ignore": [
			".git",
			"*.gitignore",
			"*.log",
			"**/test/**",
			"**/docs/*/**",
			"**/logs/**",
			"**/node_modules/**"
		],
		"restartable": "rs",
		"verbose": true,
		"watch": [
			"*.*", "docs/server.js"
		]
	},
	"scripts": {
		"start": "ntl",
		"help": "ntl --descriptions",
		"run": "node",
		"watch": "nodemon",
		"watch:docs": "npm run docs:build && npm run docs:view && nodemon --exec 'npm run docs:build'",
		"watch:docs:ready": "npm run docs:build && npm run docs:view && npm run watch:docs:go",
		"watch:docs:go": "nodemon --exec 'npm run docs:build && npm run watch:docs:ready'",
		"build:check": "node --check",
		"build:test": "echo \"Error: no test specified\" && exit 1",
		"docs:run": "nodemon docs/server.js",
		"docs:view": "open-cli ./docs/v1/index.html",
		"docs:build": "jsdoc --configure jsdoc.json --debug"
	}
}
