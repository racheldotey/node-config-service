{
	"name": "node-config-service",
	"version": "0.9.0",
	"private": false,
	"keywords": [
		"config",
		"node",
		"env",
		"environment",
		"process",
		"settings",
		"dotenv",
		"backend"
	],
	"description": "A config management service for your next node app.",
	"author": {
		"name": "Rachel Dotey",
		"email": "hello@racheldotey.com",
		"url": "https://racheldotey.ninja"
	},
	"license": "MIT",
	"homepage": "https://github.com/racheldotey/node-config-service",
	"repository": {
		"type": "git",
		"url": "https://github.com/racheldotey/node-config-service"
	},
	"bugs": {
		"url": "https://github.com/racheldotey/node-config-service/issues"
	},
	"main": "./src/index.js",
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	],
	"engines": {
		"node": "^14.17.0 || >=16.0.0"
	},
	"dependencies": {
		"dotenv": "^16.0.2",
		"dotenv-expand": "^9.0.0",
		"path": "^0.12.7"
	},
	"devDependencies": {
		"clean-jsdoc-theme": "^4.1.8",
		"concurrently": "^7.4.0",
		"connect-livereload": "^0.6.1",
		"express": "^4.18.1",
		"jsdoc": "^3.6.11",
		"jsdoc-to-markdown": "^7.1.1",
		"livereload": "^0.9.3",
		"nodemon": "^2.0.20",
		"ntl": "^5.1.0",
		"open-cli": "^7.0.1",
		"prettier": "^2.7.1"
	},
	"scripts": {
		"start": "mpm run menu",
		"menu": "ntl",
		"info": "npm run",
		"help": "npm run info",
		"test": "bash ./scripts/run-tests.sh",
		"build:dist": "bash ./scripts/build-dist.sh",
		"build:dev": "concurrently \"npm:docs:build:md\" \"npm:docs:build:html\"",
		"dev:format": "prettier --write src/**/*.{js,jsx",
		"dev:serve": "nodemon ./scripts/dev-server.js",
		"docs:build:html": "jsdoc --configure ./scripts/jsdoc.json",
		"docs:build:md": "jsdoc2md DOCS.md src/*.js index.js > DOCS.md",
		"docs:open": "open-cli http://localhost:5555/",
		"develop": "npm run build:dev && npm run test && npm run dev:serve"
	}
}
